---
import { COMPANY_NAME } from "../data/consts";
import SectionDiscoveryFlight from "./Form/SectionDiscoveryFlight.astro";
import ImageWithZoomEffect from "./ImageWithZoomEffect.astro";

const example = {
  upperHeading: `DISCOVERY FLIGHT`,
  title: `Experience the Thrill of Flying with an Eagle Aircraft Discovery Flight`,
  description: ` `,
  descriptions: [``, ``, ``],
  offerings: [
    {
      name: "Discovery Flight — 1 Hour Scenic Tour",
      price: 188,
      duration: "1 hour",
      description:
        "Enjoy a scenic flight over the lakeshore or surrounding local areas and experience Northwest Indiana from the air.",
      passengers: {
        maxPassengers: 3,
        maxWeightLbs: "500–550",
      },
      includes: [
        "Scenic flight over the local area or lakeshore",
        "Professional pilot at the controls",
        "Ideal for sightseeing or a first aviation experience",
      ],
      image: {
        src: "/src/assets/drive/sky-sunset-plane-wing_eagle-air_indiana-USA_valparaiso-IN_Flight-school_pilot-training.jpg",
        alt: "Sky sunset plane wing view, Eagle Air Indiana USA Valparaiso IN flight school pilot training",
      },
    },
    {
      name: "Discovery Flight — Flight Experience",
      price: 188,
      duration: "1 hour",
      description:
        "Get your first hands-on flight lesson and experience what it’s like to be a pilot. This introductory lesson includes a safety briefing and pre-flight inspection before taking the controls.",
      passengers: {
        maxPassengers: 3,
        maxWeightLbs: "500–550",
      },
      includes: [
        "Safety briefing and aircraft pre-flight",
        "Introductory flight lesson with an instructor",
        "Hands-on flying experience",
        "Perfect for prospective student pilots",
      ],
      image: {
        src: "/src/assets/drive/sky-plane-mountains-clouds_eagle-air_indiana-USA_valparaiso-IN_Flight-school_pilot-training.jpg",
        alt: "Sky plane flying over mountains and clouds, Eagle Air Indiana USA Valparaiso IN flight school pilot training",
      },
    },
  ],
};

const ctaMeetOurFleetPlaceholder = {
  upperHeading: ``,
  title: `MEET THE ${COMPANY_NAME} FLEET`,
  description: ``,
  image: {
    src: "/src/assets/angry-_-kat-5R4fBlHEegc-unsplash.jpg",
    alt: "Military aircraft in flight",
  },
};

const imagePlaceholder = {
  src: "/src/assets/angry-_-kat-5R4fBlHEegc-unsplash.jpg",
  alt: "Military aircraft in flight",
};

const {
  ctaData = ctaMeetOurFleetPlaceholder,
  showButton = true,
  upperHeadingTextSize = "!text-xl",
  titleTextSize = "!text-3xl",
  imageSide = "left",
  background = "blue",
  image = imagePlaceholder,
  content = example,
} = Astro.props;

const isImageOnLeft = imageSide === "left";
const isBackgroundBlue = background === "blue";
---

<section id="our-mission" class=`bg-white`>
  <div class="max-w-7xl mx-auto p-8 lg:px-8">
    <div class="flex lg:items-center gap-8">
      <div
        class=`flex flex-col lg:flex-row justify-around items-center w-full gap-4 `
      >
        <!-- Text -->
        <div class="flex flex-col">
          <p
            class=`subtitle   uppercase mb-4 !text-4xl`
            set:html={content.offerings[0].duration}
          />
          <h2
            class=` mx-auto font-bold title !text-5xl !text-center`
            set:html={content.offerings[0].name}
          />
          <p
            class="text-white sans !mx-0 !text-center lg:!text-left text-xl"
            set:html={content.offerings[0].description}
          />
          <!-- Offering Details -->
          <div>
            <ul
              class="list-none space-y-4 my-4 flex flex-col gap-4 text-xl font-semibold text-madison-950"
            >
              <div class="flex justify-around gap-4">
                <li>$ {content.offerings[0].price}</li>
                <li>{content.offerings[0].duration}</li>
              </div>
              <div class="flex justify-around gap-4">
                <li>
                  Max Passengers: {
                    content.offerings[0].passengers.maxPassengers
                  }
                </li>
                <li>
                  Max Weight: {content.offerings[0].passengers.maxWeightLbs} (lbs)
                </li>
              </div>
            </ul>
            <!-- Includes -->
            <div
              class="sans flex flex-col gap-4 text-center mx-auto text-xl py-6 max-w-3xl"
            >
              <!-- <p set:html={content.offerings[0].name} />
              <p set:html={content.offerings[0].description} /> -->
              <ul class="list-none space-y-4 px-6">
                {
                  content.offerings[0].includes.map((benefit: any) => (
                    <li class={`flex items-center  "!text-white"`}>
                      <span class={`mr-3 text-4xl `}>✓</span>
                      {benefit}
                    </li>
                  ))
                }
              </ul>
            </div>
            <!-- Button -->
            <div class="mt-10 flex justify-center items-center">
              <a href="#discovery-flight-form" class="btn-tertiary-red"
                >Book now</a
              >
            </div>
          </div>
        </div>

        <!-- Image -->
        <div class=`h-full  mx-auto lg:mx-0 w-full lg:w-3/4 mt-4 lg:mt-0`>
          <ImageWithZoomEffect
            src={content.offerings[0].image.src}
            alt={content.offerings[0].image.alt}
          />
        </div>
      </div>
    </div>

    <SectionDiscoveryFlight />

    <div class="flex lg:items-center gap-8 pt-12">
      <div
        class=`flex flex-col lg:flex-row justify-around items-center w-full gap-4 `
      >
        <!-- Text -->
        <div class="flex flex-col w-3/4">
          <p
            class=`subtitle   uppercase mb-4 !text-4xl`
            set:html={content.offerings[1].duration}
          />
          <h2
            class=` mx-auto font-bold title !text-5xl !text-center !max-w-3xl`
            set:html={content.offerings[1].name}
          />
          <p
            class="text-white sans !mx-0 !text-center lg:!text-left text-xl"
            set:html={content.offerings[1].description}
          />
          <!-- Offering Details -->
          <div>
            <ul
              class="list-none space-y-4 my-4 flex flex-col gap-4 text-xl font-semibold text-madison-950"
            >
              <div class="flex justify-around gap-4">
                <li>$ {content.offerings[1].price}</li>
                <li>{content.offerings[1].duration}</li>
              </div>
              <div class="flex justify-around gap-4">
                <li>
                  Max Passengers: {
                    content.offerings[1].passengers.maxPassengers
                  }
                </li>
                <li>
                  Max Weight: {content.offerings[1].passengers.maxWeightLbs} (lbs)
                </li>
              </div>
            </ul>
            <!-- Includes -->
            <div
              class="sans flex flex-col gap-4 text-center mx-auto text-xl py-6 max-w-3xl"
            >
              <!-- <p set:html={content.offerings[0].name} />
              <p set:html={content.offerings[0].description} /> -->
              <ul class="list-none space-y-4 px-6">
                {
                  content.offerings[1].includes.map((benefit: any) => (
                    <li class={`flex items-center  "!text-white"`}>
                      <span class={`mr-3 text-4xl `}>✓</span>
                      {benefit}
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>

          <!-- Button -->
          <div class="mt-10 flex justify-center items-center">
            <a href="#discovery-flight-form" class="btn-tertiary-red"
              >Book now</a
            >
          </div>
        </div>
        <!-- Image -->
        <div class=`h-full mx-auto lg:mx-0 w-full  mt-4 lg:mt-0`>
          <ImageWithZoomEffect
            src={content.offerings[1].image.src}
            alt={content.offerings[1].image.alt}
          />
        </div>
      </div>
    </div>
  </div>
</section>
