---
import { COMPANY_NAME } from "../data/consts";
import ImageWithZoomEffect from "./ImageWithZoomEffect.astro";
const ctaEnrollWithUsData = {
  upperHeading: "OUR STATE-OF-THE-ART AICRAFTS",
  title: `MEET THE ${COMPANY_NAME} FLEET`
}


const { 
  ctaData = ctaEnrollWithUsData,
  showButton = true,
  upperHeadingTextSize = "!text-xl",
  titleTextSize = "!text-3xl" 
 } = Astro.props;

 const image = {
    src: "/src/assets/angry-_-kat-5R4fBlHEegc-unsplash.jpg",
    alt: "Military aircraft in flight",
  }
---
  <section id="our-mission" class="bg-monza-800">
  <div class="max-w-7xl mx-auto p-8 lg:px-8">
        <div class="grid grid-cols-1 xl:grid-cols-2">
        <div class="flex flex-col justify-start">
          <p class=`${upperHeadingTextSize} !text-center lg:!text-left  !mx-0 subtitle !text-white  uppercase mb-4`>
          {ctaData.upperHeading}
        </p>
        <h2 class=`${titleTextSize} !text-center lg:!text-left mx-auto lg:!mx-0 max-w-[80%] lg:max-w-[50%] xl:max-w-[70%] font-bold title  !text-white`>
          {ctaData.title}
        </h2>
            <p class="text-white sans !mx-0 !text-center lg:!text-left text-xl">
              Our fleet is meticulously maintained to the highest standards, combining reliability, safety, and modern avionics to deliver a premium training experience. Each aircraft is selected to support pilots at every stage of their journey, from foundational skills to advanced flight operations.
            </p>
        {
          showButton && (
            <a href="/aircraft" class="my-8 mx-auto lg:mx-0 bg-madison-950 text-base text-white w-fit sm:text-lg md:text-xl px-8 py-4 min-w-[200px] text-center font-semibold transition-all duration-300 hover:scale-105 hover:shadow-2xl">
              Meet Our Fleet
            </a>
          )
        }
        </div>
          <div class="h-full  mx-auto lg:mx-0">
          <ImageWithZoomEffect src={image.src} alt={image.alt}/>
        </div>
  </div>
    </div>
  </section>