---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const {
  src,
  alt,
  class: classes,
  quality = 70,
  loading = "lazy",
  widths: userWidths,
  sizes: userSizes,
    width: forcedWidth,
  ...rest
} = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif,webp,avif}"
);

if (!images[src])
  throw new Error(
    `"${src}" does not exist in glob: "src/assets/**/*.{jpeg,jpg,png,gif,webp,avif}"`
  );

const image = await images[src]();
const { width: originalWidth, height: originalHeight } = image.default;

const finalWidth = forcedWidth || Math.min(originalWidth, 1920);
const finalHeight = Math.round((finalWidth / originalWidth) * originalHeight);

const widths = userWidths ?? [360, 540, 720, 1080, finalWidth];
const sizes = userSizes ?? 
  `(max-width: 480px) 100vw, (max-width: 1024px) 50vw, ${finalWidth}px`;
---

<Image
  src={image.default}
  alt={alt}
  class={classes}
  quality={quality}
  widths={widths}
  width={finalWidth}
  height={finalHeight} 
  sizes={sizes}
  loading={loading}
  format="webp"
  {...rest}
/>
