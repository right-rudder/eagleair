---
import OurCrewCard from "./OurCrewCard.astro";

interface Props {
  crew: Array<any>;
  data: {
    upperHeaderTwo: string;
    titleTwo: string;
  };
}

const crewPlaceholder = [
  {
    slug: "john-doe",
    data: {
      name: "John Doe",
      title: "Chief Flight Instructor",
      image: "/src/assets/crew/team-member-placeholder.jpg",
      order: 1
    }
  },
  {
    slug: "jane-smith",
    data: {
      name: "Jane Smith",
      title: "Assistant Flight Instructor",
      image: "/src/assets/crew/team-member-placeholder.jpg",
      order: 2
    }
  }
];

const dataPlaceholder = {
  upperHeaderTwo: "They Are Here For You",
  titleTwo: "Our Team Members"
};


const { crew = crewPlaceholder, data = dataPlaceholder } = Astro.props;
---

<section class="bg-mmuted-50 p-16 flex flex-col">
  <div class="flex flex-col gap-4 mb-8 justify-center">
    <p class="subtitle !text-black">{data.upperHeaderTwo}</p>
    <h2 class="text-4xl md:text-5xl font-bold text-center title !text-madison-950">
      {data.titleTwo}
    </h2>
  </div>

  <div class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      crew.map((member) => (
        <OurCrewCard member={member} />
      ))
    }
  </div>
</section>
