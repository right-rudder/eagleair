---
import ImageWithZoomEffect from "./ImageWithZoomEffect.astro";

interface Props {
  aircraft: {
    slug: string;
    data: {
      name: string;
      model: string;
      image: string;
      specifications?: {
        engines?: string;
        seats?: number;
        range?: string;
        cruiseSpeed?: string;
      };
    };
  };
}

const aircraftData = {
  slug: "cessna-172",
  data: {
    name: "Cessna 172 Skyhawk",
    model: "C172",
    image: "/src/assets/crew/team-member-placeholder.jpg",
    specifications: {
      engines: "Lycoming IO-360-L2A, 180 HP",
      seats: 4,
      range: "640 nm",
      cruiseSpeed: "122 knots"
    }
  }
}

const { aircraft = aircraftData } = Astro.props;
---

<a
  href={`/aircraft/${aircraft.slug}`}
  class="group block relative overflow-hidden aspect-[3/4] shadow-lg md:max-w-[260px]">
  <ImageWithZoomEffect
    src={aircraft.data.image}
    alt={aircraft.data.name}
    class="w-full h-full object-cover"
  />
  <div class="absolute top-0 left-0 right-0 h-2 bg-gradient-to-r from-madison-950 via-monza-500 to-monza-400"></div>
  <div class="absolute bg-white/80 backdrop-blur-md bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
    <div class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48"><path fill="#c70009" stroke="#c70009" stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M20.5 10.537C20.5 6.514 22.833 4.503 24 4c1.167.503 3.5 2.514 3.5 6.537v7.543L43 31v4l-16-8v9l5 8l-8-3l-8 3l5-8v-9L5 35v-4l15.5-12.92z"/></svg>
      <h3 class="!text-base title !mb-0">{aircraft.data.name}</h3>
    </div>
    <p class="!text-sm sans text-black mt-1">{aircraft.data.model}</p>
  </div>
</a>