---
const coursePlaceholder = {
    courseName: "Test Placeholder"
}
const { course = coursePlaceholder } = Astro.props;
---
<div class="relative min-w-[400px] flex gap-4 items-center py-8 px-4 shadow-xl transform transition-transform duration-500 ease-in-out hover:-translate-y-2">
  
  <div class="flex-none">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
      <path fill="#c70009" fill-rule="evenodd" d="M4 5a3 3 0 0 1 3-3h11a2 2 0 0 1 2 2v12.99c0 .168-.038.322-.113.472l-.545 1.09a1 1 0 0 0 0 .895l.543 1.088A1 1 0 0 1 19 22H7a3 3 0 0 1-3-3z" class="duoicon-secondary-layer" opacity="0.3"/>
      <path fill="#c70009" fill-rule="evenodd" d="M10 7a1 1 0 1 0 0 2h4a1 1 0 1 0 0-2zM7 18h10.408a3 3 0 0 0 0 2H7a1 1 0 1 1 0-2" class="duoicon-primary-layer"/>
    </svg>
  </div>

  <div class="flex-1">
    <h3 class="title !text-2xl !mb-0 max-w-[500px]">
      {course.courseName}
    </h3>
  </div>

  <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-madison-950 via-monza-500 to-monza-400"></div>
</div>
