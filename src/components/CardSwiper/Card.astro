---
import ImageComp from "../ImageComp.astro";

const {
  title = "Program Title",
  description = "Program Description",
  image = "/src/assets/crew/team-member-placeholder.jpg",
  targetsWhere = "/",
  showControls = false,
} = Astro.props;
---

<a href={targetsWhere} class="block group relative w-full aspect-video overflow-hidden bg-gray-900">
  <div class="absolute top-0 left-0 right-0 h-1 bg-linear-to-r from-madison-950 via-monza-500 to-monza-400 z-50"></div>
  <div class="h-full w-full overflow-hidden">
    <ImageComp
      src={image.src}
      alt={image.alt}
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
      widths={[480, 720, 1080]}
      sizes="(max-width: 720px) 100vw, 33vw"
    />
  </div>
  <div class="absolute inset-0 flex flex-col justify-end bg-gradient-to-t from-black/80 via-black/20 to-transparent p-6 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
    <h3 class="text-xl font-bold text-white">{title}</h3>
    <p class="mt-2 text-sm text-gray-200">{description}</p>
  </div>
  
  {showControls && (
    <>
      <button class="swiper-prev absolute left-4 top-1/2 -translate-y-1/2 z-10 bg-black/50 text-white p-3 rounded-full hover:bg-black/70 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        ←
      </button>
      
      <button class="swiper-next absolute right-4 top-1/2 -translate-y-1/2 z-10 bg-black/50 text-white p-3 rounded-full hover:bg-black/70 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        →
      </button>
    </>
  )}
</a>