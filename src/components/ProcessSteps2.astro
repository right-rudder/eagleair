---
interface Step {
  svg: string,
  number: number;
  title: string;
  description: string;
}

interface Props {
  uptitle: string;
  title: string;
  subtitle?: string;
  steps: Step[];
}

const { uptitle, title, subtitle, steps } = Astro.props;
---

<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12 flex flex-col items-center gap-4">
    <div>
      <h2 class="font-subtitle text-monza-800">{uptitle.toUpperCase()}</h4>
    </div>
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16 flex flex-col items-center">
      <h3 class="title font-title text-madison-950 max-w-[70%]">
        {title}
      </h3>
      {subtitle && <p class="text-lg md:text-xl max-w-3xl mx-auto text-black font-sans">{subtitle}</p>}
    </div>

    <!-- Steps -->
    <div class="relative">
      <!-- Connection Line (Desktop) -->
      <div
        class="hidden lg:block absolute top-16 left-0 right-0 h-1 bg-primary-200"
        aria-hidden="true"
      >
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          steps.map((step, index) => (
            <div>
              {/* Step Card */}
              <div class="flex flex-col items-center">
                {/* Step Number */}
                <div class="flex items-center justify-center w-fit aspect-square text-7xl font-bold hover:cursor-pointer 
                  transition-transform duration-800 ease-out hover:-translate-y-4">
                  <span class="w-25 h-25 mb-4" set:html={step.svg}></span>
                </div>

                {/* Step Title */}
                <h4 class="text-2xl text-center font-title font-bold text-madison-950 mb-3">
                  {step.title}
                </h4>

                {/* Step Description */}
                <p class="font-sans text-center text-md text-black leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
