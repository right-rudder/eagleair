---
import ImageComp from "./ImageComp.astro";
import ImageWithZoomEffect from "./ImageWithZoomEffect.astro";

const eagleAirLogo = "/src/assets/logo_eagle_aircraft_round_color.png";

const postPlaceholder = {
  slug: "example-post",
  data: {
    image: "/src/assets/crew/team-member-placeholder.jpg",
    title: "Placeholder Title",
    pubDate: new Date(),
    author: "Placeholder Author",
    description: "Placeholder description text for preview.",
    tags: ["tag-one", "tag-two"]
  }
};

// Format date helper
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};

const { post = postPlaceholder } = Astro.props;
---
<article class="bg-muted-50 shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
              {post.data.image && (
                <ImageWithZoomEffect
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full aspect-video object-cover"
                ></ImageWithZoomEffect>
              )}

              <div class="p-6">
                <div class="flex items-center gap-3 text-sm text-madison-900/90 mb-3">
                  
                  <ImageComp
                  class="w-6"
                  src={eagleAirLogo}
                  alt="Eagle Air logo"/>
                  <span >{post.data.author}</span>
                  <span>|</span>
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                </div>

                <h2 class="text-2xl font-bold mb-3">
                  <a
                    href={`/blog/${post.slug}`}
                    class="title !text-xl hover:!text-madison-600 transition-colors"
                  >
                    {post.data.title}
                  </a>
                </h2>

                <p class="sans text-black mb-4 line-clamp-3">
                  {post.data.description}
                </p>

                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.data.tags.map((tag:any) => (
                      <span class=" bg-madison-900/90 text-white text-xs px-3 py-1 rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}

           
                  <a
                  href={`/blog/${post.slug}`}
                  class="btn-tertiary block w-full"
                >
                  Read More
                </a>
              </div>
            </article>