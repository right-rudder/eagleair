---
import ImageComp from "./ImageComp.astro";
import ImageWithZoomEffect from "./ImageWithZoomEffect.astro";
import ImageWithZoomEffectAndStripe from "./ImageWithZoomEffectAndStripe.astro";

const eagleAirLogo = "/src/assets/logo_eagle_aircraft_round_color.png";

const postPlaceholder = {
  slug: "example-post",
  data: {
    image: "/src/assets/crew/team-member-placeholder.jpg",
    title: "Placeholder Title",
    pubDate: new Date(),
    author: "Placeholder Author",
    description: "Placeholder description text for preview.",
    tags: ["tag-one", "tag-two"],
  },
};

// Format date helper
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};

const { post = postPlaceholder, isHighlight = false } = Astro.props;
---

<article
  class="bg-muted-50 shadow-lg transition-all duration-300 hover:shadow-2xl hover:-translate-y-1"
>
  <figure>
    {
      post.data.image && (
        <ImageWithZoomEffectAndStripe
          src={post.data.image}
          alt={post.data.title}
          class={`w-full ${isHighlight ? "aspect-square  lg:aspect-video lg:max-h-[40vh]" : "aspect-square"} object-cover`}
        />
      )
    }
  </figure>

  <div class="p-6 flex flex-col justify-between lg:h-96 gap-3 relative">
    {
      post.data.tags && post.data.tags.length > 0 && (
        <div class=" absolute -top-14 left-4 flex flex-wrap gap-1 ">
          {post.data.tags.slice(0, 2).map((tag: any) => (
            <span class=" bg-monza-700 text-white text-xs px-3 py-1 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )
    }

    <div class="flex items-center gap-3 text-sm text-black">
      <ImageComp class="w-6" src={eagleAirLogo} alt="Eagle Aircraft logo" />
      <span>{post.data.author}</span>
      <span>|</span>
      <time datetime={post.data.pubDate.toISOString()}>
        {formatDate(post.data.pubDate)}
      </time>
    </div>
    <div class="flex flex-col h-full">
      <h2 class="block text-2xl font-bold">
        <a
          href={`/blog/${post.slug}`}
          class={`${isHighlight ? "!text-2xl md:!text-4xl" : "!text-2xl"} title hover:!text-madison-600 transition-colors`}
        >
          {post.data.title}
        </a>
      </h2>

      <p class="block sans text-black line-clamp-3">
        {post.data.description}
      </p>
    </div>
    <div class="flex">
      <a href={`/blog/${post.slug}`} class="btn-tertiary block w-full">
        Read More
      </a>
    </div>
  </div>
</article>
