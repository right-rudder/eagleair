---
interface Props {
  member: {
    slug: string;
    data: {
      name: string;
      title: string;
      image: string;
    };
  };
}

const memberData = {
    slug: "example-instructor",
    name: "John Doe",
    data: {
        name: "John Doe",
        title: "Chief Flight Instructor",
        image: "/src/assets/crew/team-member-placeholder.jpg"
    }
}

const { member = memberData } = Astro.props;
---

<a
  href={`/crew/${member.slug}`}
  class="group block relative overflow-hidden aspect-[3/4] shadow-lg"
>
  <img
    src={member.data.image}
    alt={member.data.name}
    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
  />
  <div class="absolute top-0 left-0 right-0 h-1 bg-linear-to-r from-madison-950 via-monza-500 to-monza-400"></div>
  <div class="absolute inset-0 bg-lienar-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  <div class="absolute inset-0 shadow-inner-hover opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  <div class="absolute bg-white bottom-0 left-0 right-0 p-6 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
    <div class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48"><defs><mask id="SVGb6KAzcRO"><g fill="none"><path fill="#fff" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M6 23c-4.04-7.043 3.624-11.136 8-12c14.541-12.844 26.485-.287 28 8c1.514 8.287 1.158 14.893 2 18c-6.463-8.7-10.877-7.158-12-5c-2.02 4.144-5.314 4.252-7 3c-4.04-3.314-10.476 3.202-13 7c4.847-8.7 5.505-14.273 5-16c-2.02-8.286-8.307-5.416-11-3"/><circle cx="23" cy="16" r="2" fill="#000"/></g></mask></defs><path fill="#c70009" d="M0 0h48v48H0z" mask="url(#SVGb6KAzcRO)"/></svg>
      <h3 class="!text-2xl title !mb-0 font-bold">{member.data.name}</h3>
    </div>
    <p class="!text-sm sans text-black">{member.data.title}</p>
  </div>
</a>

<style>
  .shadow-inner-hover {
    box-shadow: inset 0 0 60px rgba(0, 0, 0, 0.5);
  }
</style>