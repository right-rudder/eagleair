---
interface Props {
  data: {
    title?: string;
    upperheader?: string;
    topicTitle?: string;
    topicDescriptionParagraphs?: string[];
    bulletTitle?: string;
    bulletDescriptionParagraphs?: string[];
    bulletPoints?: string[];
    closingTitle?: string;
    closingDescriptionParagraphs?: string[];
  };
}

const { data } = Astro.props;
---

<section class="py-24 px-4 bg-madison-950 text-white relative overflow-hidden">
  <div class="absolute inset-0 opacity-5 pointer-events-none" style="background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 30px 30px;"></div>

  <div class="max-w-7xl mx-auto relative z-10 md:px-8 lg:px-12">
    
    <div class="mb-20">
      {data.upperheader && (
        <span class="text-monza-500 font-subtitle tracking-widest uppercase font-bold text-sm block mb-3">
          {data.upperheader}
        </span>
      )}
      {data.title && <h2 class="font-title text-4xl md:text-5xl font-bold text-white mb-6">{data.title}</h2>}
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 divide-y lg:divide-y-0 lg:divide-x divide-madison-800">
      
      <div class="pb-12 lg:pb-0 lg:pr-12">
        <div class="w-12 h-12 bg-madison-800 rounded-lg flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-monza-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>
        </div>
        <h3 class="font-title text-2xl font-bold mb-4 text-white">{data.topicTitle}</h3>
        {data.topicDescriptionParagraphs?.map(p => (
          <p class="text-muted-300 leading-relaxed mb-2">{p}</p>
        ))}
      </div>

      <div class="py-12 lg:py-0 lg:px-12">
        <div class="w-12 h-12 bg-madison-800 rounded-lg flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-monza-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
        </div>
        <h3 class="font-title text-2xl font-bold mb-4 text-white">{data.bulletTitle}</h3>
        {data.bulletDescriptionParagraphs?.map(p => (
          <p class="text-muted-300 leading-relaxed mb-4">{p}</p>
        ))}
        <ul class="space-y-3 mt-6">
          {data.bulletPoints?.map(item => (
            <li class="flex items-center gap-3 bg-madison-900/50 p-3 rounded border border-madison-800">
              <span class="text-monza-500 font-bold">âœ“</span>
              <span class="text-muted-200 font-subtitle tracking-wide">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <div class="pt-12 lg:pt-0 lg:pl-12">
        <div class="w-12 h-12 bg-madison-800 rounded-lg flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-monza-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>
        </div>
        <h3 class="font-title text-2xl font-bold mb-4 text-white">{data.closingTitle}</h3>
        {data.closingDescriptionParagraphs?.map(p => (
          <p class="text-muted-300 leading-relaxed mb-4">{p}</p>
        ))}
        <div class="mt-8">
           <div class="text-4xl font-bold text-white mb-1">4,000+</div>
           <div class="text-monza-400 font-subtitle uppercase tracking-widest text-sm">Pilots Trained</div>
        </div>
      </div>

    </div>
  </div>
</section>