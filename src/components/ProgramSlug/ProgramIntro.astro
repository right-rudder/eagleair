---
interface Props {
  data: {
    title?: string;
    upperheader?: string;
    descriptionParagraphs?: string[];
    highlights?: { highlightName: string; highlightValue: string }[];
    programHighlights?: {
      benefits?: string[];
      requirements?: string[];
    };
  };
}

const { data } = Astro.props;
---

<section class="py-12 md:py-16">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    
    <div class="mb-12 flex flex-col items-center lg:items-start">
      {data.upperheader && (
        <span class="text-black font-sans font-bold tracking-widest mb-2 block text-center lg:text-left">
          {data.upperheader}
        </span>
      )}
      
      {data.title && (
        <h2 class="font-title !text-4xl max-w-xl lg:!text-5xl lg:max-w-3xl  font-bold text-madison-950 mb-6 text-center lg:text-left">
          {data.title}
        </h2>
      )}

      <div class="prose prose-muted text-black font-sans leading-relaxed space-y-4 max-w-7xl">
        {data.descriptionParagraphs?.map((p) => <p set:html={p}></p>)}
      </div>
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-5 gap-6 lg:gap-8 items-stretch">
      
      {data.programHighlights?.benefits && (
        <div class="lg:col-span-2 bg-white p-6 md:p-8 rounded-sm border border-muted-200 shadow-sm flex flex-col">
          <h3 class="font-title leading-none text-xl font-bold text-madison-950 mb-6 flex items-center gap-2">
            <span class="ml-1 w-2 h-6 bg-madison-900"></span>
            Program Benefits
          </h3>
          <ul class="space-y-3 flex-grow">
            {data.programHighlights.benefits.map((item) => (
              <li class="flex items-start gap-3 text-sm text-green-500">
                <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  class="w-5 h-5 shrink-0"  
                  viewBox="0 0 32 32"
                >
                  <path fill="currentColor" d="M16 2a14 14 0 1 0 14 14A14 14 0 0 0 16 2m-2 19.59l-5-5L10.59 15L14 18.41L21.41 11l1.596 1.586Z"/>
                  <path fill="none" d="m14 21.591l-5-5L10.591 15L14 18.409L21.41 11l1.595 1.585z"/>
                </svg>
                <span class="font-sans leading-relaxed text-black">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      {data.programHighlights?.requirements && (
        <div class="lg:col-span-2 bg-white p-6 md:p-8 rounded-sm border border-muted-200 shadow-sm flex flex-col">
          <h3 class="font-title leading-none text-xl font-bold text-madison-950 mb-6 flex items-center gap-2">
            <span class="ml-1 w-2 h-6 bg-madison-900"></span>
            Prerequisites
          </h3>
          <ul class="space-y-3 flex-grow">
            {data.programHighlights.requirements.map((item) => (
              <li class="flex items-start gap-3 text-sm text-muted-700">
                <span class="flex items-center justify-center text-madison-600 text-xs font-bold shrink-0">
                  <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  class="w-5 h-5 shrink-0"  
                  viewBox="0 0 32 32"
                >
                  <path fill="currentColor" d="M16 2a14 14 0 1 0 14 14A14 14 0 0 0 16 2m-2 19.59l-5-5L10.59 15L14 18.41L21.41 11l1.596 1.586Z"/>
                  <path fill="none" d="m14 21.591l-5-5L10.591 15L14 18.409L21.41 11l1.595 1.585z"/>
                </svg>
                </span>
                <span class="font-sans leading-relaxed text-black">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      {data.highlights && (
        <div class="lg:col-span-1 bg-white p-6 md:p-8 rounded-sm border border-muted-200 shadow-sm flex flex-col">
          <h3 class="font-title leading-none text-xl font-bold text-madison-950 mb-6 flex items-center gap-2">
          <span class="w-2 h-6 bg-madison-900"></span>
            Key Details
          </h3>
          <div class="space-y-6 flex-grow">
            {data.highlights.map((item, index) => (
              <div class={`flex flex-col ${index !== 0 ? 'pt-6 border-t border-muted-200' : ''}`}>
                <span class="font-sans font-bold !text-sm text-muted-950 uppercase tracking-wide mb-1">
                  {item.highlightName}
                </span>
                <span class="!text-base font-title font-bold text-madison-900">
                  {item.highlightValue}
                </span>
              </div>
            ))}
          </div>
        </div>
      )}

    </div>
  </div>
</section>