---
interface Props {
  data: {
    title?: string;
    upperheader?: string;
    descriptionParagraphs?: string[];
    highlights?: { highlightName: string; highlightValue: string }[];
    programHighlights?: {
      benefits?: string[];
      requirements?: string[];
    };
  };
}

const { data } = Astro.props;
---

<section class="py-12 md:py-16 bg-muted-50 border-b border-muted-200">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    
    <div class="mb-12">
      {data.upperheader && (
        <span class="text-monza-600 font-bold tracking-widest uppercase text-xs mb-2 block text-center lg:text-left">
          {data.upperheader}
        </span>
      )}
      
      {data.title && (
        <h2 class="font-title text-3xl md:text-4xl font-bold text-madison-950 mb-6 text-center lg:text-left">
          {data.title}
        </h2>
      )}

      <div class="prose prose-muted text-muted-600 font-sans leading-relaxed space-y-4 max-w-4xl">
        {data.descriptionParagraphs?.map((p) => <p>{p}</p>)}
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 lg:gap-8 items-stretch">
      
      {data.programHighlights?.benefits && (
        <div class="lg:col-span-2 bg-white p-6 md:p-8 rounded-xl border border-muted-200 shadow-sm flex flex-col">
          <h3 class="font-title text-xl font-bold text-madison-950 mb-6 flex items-center gap-2">
            <span class="w-2 h-6 bg-monza-500 rounded-sm"></span>
            Program Benefits
          </h3>
          <ul class="space-y-3 flex-grow">
            {data.programHighlights.benefits.map((item) => (
              <li class="flex items-start gap-3 text-sm text-muted-700">
                <svg class="w-5 h-5 text-monza-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="leading-relaxed">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      {data.programHighlights?.requirements && (
        <div class="lg:col-span-2 bg-white p-6 md:p-8 rounded-xl border border-muted-200 shadow-sm flex flex-col">
          <h3 class="font-title text-xl font-bold text-madison-950 mb-6 flex items-center gap-2">
            <span class="w-2 h-6 bg-madison-500 rounded-sm"></span>
            Prerequisites
          </h3>
          <ul class="space-y-3 flex-grow">
            {data.programHighlights.requirements.map((item) => (
              <li class="flex items-start gap-3 text-sm text-muted-700">
                <span class="w-5 h-5 flex items-center justify-center rounded-full bg-muted-100 text-madison-600 text-xs font-bold shrink-0">
                  âœ“
                </span>
                <span class="leading-relaxed">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      {data.highlights && (
        <div class="lg:col-span-1 bg-white p-6 md:p-8 rounded-xl border border-muted-200 shadow-sm flex flex-col">
          <h3 class="text-sm font-bold text-madison-950 uppercase tracking-wider mb-6 opacity-80">
            Key Details
          </h3>
          <div class="space-y-6 flex-grow">
            {data.highlights.map((item, index) => (
              <div class={`flex flex-col ${index !== 0 ? 'pt-6 border-t border-muted-200' : ''}`}>
                <span class="text-xs font-semibold text-muted-500 uppercase tracking-wide mb-1">
                  {item.highlightName}
                </span>
                <span class="text-xl font-title font-bold text-monza-600">
                  {item.highlightValue}
                </span>
              </div>
            ))}
          </div>
        </div>
      )}

    </div>
  </div>
</section>