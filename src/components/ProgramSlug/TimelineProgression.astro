---
interface Props {
  data: {
    title?: string;
    upperheader?: string;
    descriptionParagraphs?: string[];
    phases?: {
      phaseTitle: string;
      phaseBulletPoints: string[];
    }[];
    outcome?: string;
  };
}

const { data } = Astro.props;
---

<section class="py-20 px-4 bg-muted-50">
  <div class="max-w-4xl mx-auto">
    
    <div class="text-center mb-16">
      {data.upperheader && (
        <span class="text-madison-600 font-subtitle tracking-widest uppercase font-bold text-sm block mb-2">
          {data.upperheader}
        </span>
      )}
      {data.title && <h2 class="title">{data.title}</h2>}
      {data.descriptionParagraphs?.map(p => <p class="subtitle mt-4">{p}</p>)}
    </div>

    <div class="relative space-y-8 before:absolute before:inset-0 before:ml-5 before:-translate-x-px md:before:mx-auto md:before:translate-x-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-transparent before:via-muted-300 before:to-transparent">
      
      {data.phases?.map((phase, index) => (
        <div class="relative flex items-center justify-between md:justify-normal md:odd:flex-row-reverse group is-active">
          
          <div class="flex items-center justify-center w-10 h-10 rounded-full border-4 border-white bg-madison-950 text-white shrink-0 md:order-1 md:group-odd:-translate-x-1/2 md:group-even:translate-x-1/2 shadow-lg z-10">
            <span class="font-bold font-subtitle text-sm">{index + 1}</span>
          </div>
          
          <div class="w-[calc(100%-4rem)] md:w-[calc(50%-2.5rem)] bg-white p-6 rounded-xl shadow-sm border border-muted-100 hover:border-monza-200 transition-colors">
            <h3 class="font-title text-xl font-bold text-madison-950 mb-4">{phase.phaseTitle}</h3>
            <ul class="space-y-2">
              {phase.phaseBulletPoints.map(point => (
                <li class="flex items-start gap-2 text-muted-600 text-sm">
                  <span class="text-monza-500 mt-1">â€¢</span>
                  {point}
                </li>
              ))}
            </ul>
          </div>
          
        </div>
      ))}
    </div>

    {data.outcome && (
      <div class="mt-16 text-center">
        <div class="inline-block bg-madison-950 text-white px-8 py-4 rounded-full shadow-xl transform hover:scale-105 transition-transform duration-300">
          <span class="block text-monza-400 text-xs font-bold uppercase tracking-widest mb-1">Final Outcome</span>
          <span class="font-title text-2xl font-bold">{data.outcome}</span>
        </div>
      </div>
    )}

  </div>
</section>