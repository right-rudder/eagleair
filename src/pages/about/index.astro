---
import CTAEnrollWithUs from "../../components/CTAEnrollWithUs.astro";
import AboutUsWithImageAndQuote from "../../components/AboutUsWithImageAndQuote.astro";
import { COMPANY_NICKNAME, PHONE_NUMBER } from "../../data/consts";
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeroScreen from "../../components/HeroScreen2.astro";
import CTASection from "../../components/CTASection.astro";

const heroData = {
  image: {
    src: "/src/assets/angry-_-kat-5R4fBlHEegc-unsplash.jpg",
    alt: "Military aircraft in flight",
  },
  upperHeader: `Flying is Freedom`,
  title: "From First Flight <br> to Certified Pilot <br> All in One Academy",
  subTitle:
    "Accelerated FAA Part 141 pilot training designed for future commercial and airline pilots",
  cta: [
    { url: "#", text: "Private Pilot (PPL)" },
  ],
  stats: [
    { value: "1,500", suffix: "+", title: "Pilots Trained" },
    { value: "95", suffix: "%", title: "Checkride Pass Rate" },
    { value: "12", suffix: "+", title: "Training Aircraft" },
  ],
};

const ctaData = {
  title: "Ready to Start Your Airline Career?",
  description:
    "The aviation industry is waiting for skilled pilots like you. Take the first step towards your dream job with Eagle Aircraft's comprehensive training programs tailored for structured aviators.",
  image: {
    src: "/src/assets/sebastian-zzWYD-tc_jI-unsplash.jpg",
    alt: "Airliner flying above the clouds",
  },
  primaryCTA: {
    text: "Get Started Today",
    href: "/contact",
  },
};

---

<BaseLayout>
  <HeroScreen data={heroData} />
  <AboutUsWithImageAndQuote/>
  <CTAEnrollWithUs
  upperHeadingTextSize="!text-xl"
  titleTextSize = "!text-3xl"
  showButton={true} />
  <CTASection/>
</BaseLayout>