---
import CTAEnrollWithUs from "../../components/CTAEnrollWithUs.astro";
import AboutUsWithImageAndQuote from "../../components/AboutUsWithImageAndQuote.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import CTASection from "../../components/CTASection.astro";
import GoogleMapLocation from "../../components/External/GoogleMapLocation.astro";
import Hero75 from "../../components/Hero75.astro";
import GoogleReviews from "../../components/External/GoogleReviews.astro";
import { AIRPORT, AIRPORT_CODE, COMPANY_NAME, COMPANY_NICKNAME, LOCATION, NEAR_LOCATIONS } from "../../data/consts";
import CTAEnrollWithUsBlue from "../../components/CTAEnrollWithUsBlue.astro";

const heroData = {
  image: { src: "/src/assets/old website/background.jpg", alt: "Background" },
  upperHeader: "Who We Are",
  title: "Training Pilots with<br> Purpose,Precision,<br> and Safety",
  subTitle:
    "Eagle Aircraft Flight Academy is dedicated to developing confident, skilled pilots through professional instruction, structured training, and a strong safety cultureâ€”serving both domestic and international students.",
  cta: [
    { url: "/discovery-flight", text: "Book a Discovery Flight" },
    { url: "/crew", text: "Meet the Team" },
  ],
};

const ctaData = {
  title: "Ready to Start Your Airline Career?",
  description:
    "The aviation industry is waiting for skilled pilots like you. Take the first step towards your dream job with Eagle Aircraft's comprehensive training programs tailored for structured aviators.",
  image: {
    src: "/src/assets/sebastian-zzWYD-tc_jI-unsplash.jpg",
    alt: "Airliner flying above the clouds",
  },
  primaryCTA: {
    text: "Get Started Today",
    href: "/about/contact",
  },
};

const metaTagsData = {
  siteTitle: `About Us | ${COMPANY_NAME} in ${LOCATION.locationFull}`,
  siteDescription: `Learn about ${COMPANY_NAME}, a premier Cessna Pilot Center at ${AIRPORT} (${AIRPORT_CODE}). Since 1979, we have trained over 4,000 pilots in ${LOCATION.locationFull}. Meet our team and discover our FAA Part 141 and Part 61 flight training legacy.`,
  siteKeywords: [
    `about ${COMPANY_NAME}`,
    `${COMPANY_NICKNAME} history`,
    `flight school in ${LOCATION.city} ${LOCATION.state}`,
    `pilot training ${LOCATION.locationFull}`,
    `${AIRPORT} flight academy`,
    `${AIRPORT_CODE} aviation school`,
    "Cessna Pilot Center history",
    "professional flight instructors Indiana",
    "FAA Part 141 approved school",
    "Part 61 flight training Indiana",
    "aviation career mentorship",
    `learn to fly near ${NEAR_LOCATIONS[0]}`,
    "veteran owned flight school",
    "Liberty University flight training affiliate",
    "Valparaiso University aviation partner",
    "training pilots since 1979",
    "Northwest Indiana aviation legacy",
    "Eagle Aircraft Valparaiso team",
    "commercial pilot training experts",
    "airline pilot pathway Indiana",
    "international student flight school Indiana",
    "SEVIS approved aviation academy"
  ].join(", "),
};
---

<BaseLayout {...metaTagsData}>
  <Hero75 data={heroData} />
  <AboutUsWithImageAndQuote />
  <CTAEnrollWithUs
    upperHeadingTextSize="!text-xl"
    titleTextSize="!text-3xl"
    paragraphTextSize="text-md"
    showButton={false}
  />
  <GoogleReviews />
  <CTAEnrollWithUsBlue
    upperHeadingTextSize="!text-xl"
    titleTextSize="!text-3xl"
    paragraphTextSize="!text-md"
    showButton={true}
  />
  <GoogleMapLocation />
  <CTASection />
</BaseLayout>
