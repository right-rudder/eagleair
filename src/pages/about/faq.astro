---
import CTAEnrollWithUsMini from "../../components/CTAEnrollWithUsMini.astro";
import FAQSection from "../../components/FAQ/FAQSection.jsx";
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeroScreen from "../../components/HeroScreen2.astro";
import CTASection from "../../components/CTASection.astro";
import Hero75 from "../../components/Hero75.astro";
import { AIRPORT, AIRPORT_CODE, COMPANY_NAME, COMPANY_NICKNAME, LOCATION } from "../../data/consts";

const heroData = {
  image: {
    src: "/src/assets/eagle-air-valparaiso-old-header.jpg",
    alt: "Training aircraft parked on the ramp at Eagle Aircraft Flight Academy",
  },
  upperHeader: "Frequently Asked Questions",
  title: "Answers to Common <br> Flight Training Questions",
  subTitle:
    "From getting started and medical requirements to international students and career pathways, find clear answers to the questions we hear most often.",
  cta: [
    { url: "/aircraft", text: "Meet Our Fleet" },
    { url: "/crew", text: "Meet the Team" },
  ],
};

const faqPagePlaceholder = {
  upperHeader: "Questions and Answers",
  title: "Frequently Asked Questions",
  paragraphs: [
    "In this page there's everything you need to know and it's usually asked about our company.",
  ],
};

const { faqPageData = faqPagePlaceholder } = Astro.props;

const metaTagsData = {
  siteTitle: `Frequently Asked Questions | ${COMPANY_NAME}`,
  siteDescription: `Find answers to common questions about flight training at ${COMPANY_NICKNAME} in ${LOCATION.city}. Learn about our FAA approved programs, ${AIRPORT} facilities, enrollment process, and career pathways.`,
  siteKeywords: [
    `flight school FAQ ${LOCATION.city}`,
    `pilot training questions ${LOCATION.state}`,
    `${COMPANY_NAME} frequently asked questions`,
    `how to start flight training at ${AIRPORT}`,
    `${AIRPORT_CODE} flight school information`,
    "flight training requirements Indiana",
    "private pilot license FAQ",
    "instrument rating requirements",
    "commercial pilot training costs",
    "Cessna Pilot Center FAQ",
    "FAA Part 141 vs Part 61",
    "VA benefits for flight training",
    "GI Bill flight school Indiana",
    "international student pilot visa M-1",
    "SEVIS approved flight school Indiana",
    "Liberty University flight training partner",
    "Valparaiso University aviation",
    "discovery flight cost",
    "how long to become a pilot",
    "aviation medical certificate questions",
    "flight instructor ratings CFI CFII MEI",
    "airline transport pilot training",
    "Elite simulator training",
    "Porter County flight training",
    "Chicagoland flight school FAQ",
    "Northwest Indiana pilot academy",
    "becoming a pilot at Eagle Aircraft",
    "enrollment process for flight school",
    "aircraft rental Valparaiso",
    "flight school housing Indiana"
  ].join(", "),
};
---

<BaseLayout {...metaTagsData}>
  <Hero75 data={heroData} />
  <section class="py-16 px-4">
    <div class="max-w-7xl mx-auto flex flex-col space-y-4">
      <p class="mx-auto subtitle !text-black">{faqPageData.upperHeader}</p>
      <h1
        class="mx-auto max-w-lg md:max-w-xl text-4xl md:text-5xl font-bold text-center title"
      >
        {faqPageData.title}
      </h1>
      {
        faqPageData.paragraphs.map((paragraph: string) => (
          <p class="text-xl text-center sans max-w-2xl mx-auto">{paragraph}</p>
        ))
      }
    </div>
  </section>
  <FAQSection client:load />
  <CTAEnrollWithUsMini />
  <CTASection />
</BaseLayout>
