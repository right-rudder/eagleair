---
import CTAMeetOurAffiliateProgram from "../../components/CTAMeetOurAffiliateProgram.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeroScreen from "../../components/HeroScreen2.astro";
import CTASection from "../../components/CTASection.astro";
import ImageComp from "../../components/ImageComp.astro";
import ListOfCoursesSection from "../../components/ListOfCoursesSection.astro";
import BenefitsListLibertyUniversity from "../../components/BenefitsListLibertyUniversity.astro";
import { COMPANY_NAME, COMPANY_NICKNAME } from "../../data/consts";
import CTAEnrollWithUsMiniWhite from "../../components/CTAEnrollWithUsMiniWhite.astro";
import Hero75 from "../../components/Hero75.astro";

const heroData = {
  image: {
    src: "/src/assets/drive/fleet-two-cesnas-team_eagle-air_indiana-USA_valparaiso-IN_Flight-school_pilot-training.jpg",
    alt: "Fleet two Cessnas team, Eagle Aircraft Indiana USA Valparaiso IN flight school pilot training",
  },
  upperHeader: `Flying is Freedom`,
  title: "From First Flight <br> to Certified Pilot <br> All in One Academy",
  subTitle:
    "Accelerated FAA Part 141 pilot training designed for future commercial and airline pilots",
  cta: [{ url: "/discovery-flight", text: "Book a Discovery Flight" }],
};

const LibertyUniversityLogo =
  "/src/assets/liberty-university-school-of-aeronautics-affiliate-logo.png";

const libertyUniversityIntroData = {
  upperHeader: "Flight Training Affiliate Since 2014",
  title: "Liberty University<br>School of Aeronautics",
  paragraphs: [
    "Eagle Aircraft Flight Academy has proudly served as a Liberty University Flight Training Affiliate since 2014. Through this partnership, students can earn a Bachelor of Science in Aeronautics in as little as 2–3 years while completing all required flight ratings locally at Eagle Aircraft.",
    "Graduates of the Liberty University aviation program may qualify for the FAA Restricted ATP, allowing airline eligibility at just 1,000 flight hours instead of the standard 1,500. This accelerated airline pathway is available only through approved university degree programs like Liberty University.",
  ],
};

const ctaProgramsData = {
  upperHeading: "LIBERTY UNIVERSITY AFFILIATE PROGRAM",
  title: `EARN YOUR DEGREE AND FLY TOWARD THE AIRLINES`,
  paragraph:
    "Through Eagle Aircraft’s partnership with Liberty University, students can earn a Bachelor of Science in Aeronautics while completing their flight training locally. This university pathway allows eligible graduates to qualify for the FAA Restricted ATP at 1,000 hours—getting hired by airlines sooner than the traditional 1,500-hour route.",
  ctaLink: "https://www.liberty.edu/eaglestudent",
  ctaText: "Apply to Liberty University",
};

const listOfCourses = [
  { courseName: "AVIA 220 – Private Flight I" },
  { courseName: "AVIA 225 – Private Flight II" },
  { courseName: "AVIA 320 – Instrument Flight*" },
  { courseName: "AVIA 325 – Commercial Flight I*" },
  { courseName: "AVIA 326 – Commercial Flight II*" },
  { courseName: "AVIA 327 – Commercial Flight III*" },
  { courseName: "AVIA 331 – Commercial Pilot, Single Engine Land Add On" },
  { courseName: "AVIA 420 – Flight Instructor Flight*" },
  { courseName: "AVIA 422 – Certified Flight Instructor – Instrument (CFII)*" },
  { courseName: "AVIA 440 – Multi-Engine Flight" },
  { courseName: "AVIA 441 – Multi-Engine Instructor" },
];

const ctaMiniData = {
  title: `Discover What ${COMPANY_NAME} Can Offer You`,
  description:
    "From private pilot training to advanced certifications, we have programs designed for every aviation goal.",
  ctaLink: "/about/contact",
  ctaText: "Contact Us",
};

const libertyHighlights = [
  { label: "Degree Earned", value: "B.S. in Aeronautics" },
  { label: "Program Length", value: "2–3 Years" },
  { label: "ATP Eligibility", value: "Restricted ATP @ 1,000 Hours" },
  { label: "Affiliate Since", value: "2014" },
];
---

<BaseLayout>
  <Hero75 data={heroData} />
  <section class="py-16 px-4">
    <div class="max-w-7xl mx-auto flex flex-col space-y-4 items-center">
      <ImageComp
        src={LibertyUniversityLogo}
        alt="Liberty University School of Aeronautics Afiliate Logo"
        class="pl-1 w-[450px] h-auto"
      />
      <p class="mx-auto subtitle !text-black">
        {libertyUniversityIntroData.upperHeader}
      </p>
      <h2
        set:html={libertyUniversityIntroData.title}
        class="text-4xl md:text-5xl mx-auto font-bold text-center title"
      />
      {
        libertyUniversityIntroData.paragraphs.map((paragraph: string) => (
          <p class="text-xl text-center sans max-w-2xl mx-auto">{paragraph}</p>
        ))
      }
    </div>
  </section>
  <CTAMeetOurAffiliateProgram background="red" ctaData={ctaProgramsData} />
  <ListOfCoursesSection listOfCoursesData={listOfCourses} />
  <BenefitsListLibertyUniversity imageSide="right" background="red" />
  <CTAEnrollWithUsMiniWhite ctaData={ctaMiniData} />
  <CTASection />
</BaseLayout>
